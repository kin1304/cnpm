                                                                    @*<label for="name" class="form-label">Email:</label>*@
                                                                    <p></p>
                                                                    <input type="password" placeholder="RetypePassword" class="form-control" id="name" name="RetypePassword" required>
                                                                </div>
                                                                                <button type="submit" class="btn">Đăng Ký</button>
