
@model IEnumerable<BunDau.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">BÚN ĐẬU YUMMY</h1>
            <p class="lead fw-normal text-white-50 mb-0">Chất lượng trong từng bữa ăn</p>
        </div>
    </div>
</header>
<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">DANH SÁCH SẢN PHẨM</h2>
    <hr />
    <div class="row">
        @foreach (var sanpham in Model)
        {
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card h-100">
                    <img class="card-img-top"
                         src="@sanpham.ImagePro">
                    <div class="card-body" style="text-align: center">
                        <h4 class="card-title">@sanpham.NamePro</h4>
                        <p class="card-text">@sanpham.Price</p>
                        @Html.ActionLink("CHI TIẾT", "Details", new { id = sanpham.ProductID }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
