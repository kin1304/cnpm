@model BunDau.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 style="text-align: center">CHI TIẾT SẢN PHẨM</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <img style="width: 100%;" src="@Model.ImagePro">
    </div>
    <div class="col-md-6">
        <h4>Tên sản phẩm: @Model.NamePro</h4>
        <p style="text-align: justify">
            <span style="font-weight: bold">Mô tả:</span> @Model.DecriptionPro
        </p>
        <p class="price">
            Giá bán: <span style="color:red; font-size:24px;">
                @Model.Price
                VNĐ
            </span>
        </p>
        <a href="/Cart/Addtocart/@Model.ProductID">Thêm vào giỏ hàng</a>
          
       
    </div>
</div>
